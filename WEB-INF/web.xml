<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
   http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
   version="4.0">

    <display-name>Akusigmak - JSP Frontend for Quiz2PWEB</display-name>
    <description>JSP Frontend application communicating with Python Flask Backend</description>

    <!-- Welcome Files -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>JSP/auth/login.jsp</welcome-file>
    </welcome-file-list>

    <!-- Session Configuration -->
    <session-config>
        <tracking-mode>COOKIE</tracking-mode>
        <cookie-config>
            <secure>false</secure>
            <http-only>true</http-only>
            <same-site>Lax</same-site>
        </cookie-config>
    </session-config>

    <!-- Security Constraint -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Areas</web-resource-name>
            <url-pattern>/JSP/project/*</url-pattern>
            <url-pattern>/JSP/user/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

</web-app>
